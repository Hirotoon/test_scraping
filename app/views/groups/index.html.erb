<p class="groups">登録団体一覧</p>
<table class="table table-hover table-inverse">
 	<thead>
   		<tr> 
    	  	<th>団体名</th>
    	  	<th>住所</th>
    	  	<th>電話番号</th>
    	  	<th>メールアドレス</th>
    	  	<th></th>
    	  	<th></th>
    	  	<th></th>
    	</tr>
  	</thead>
	<% @groups.each do |group| %>
		<tbody>
		    <tr>
		    	<td>
		    		<%= group.name %>
		    	</td>
		    	<td>
		    		<%= group.address %>
		    	</td>
		    	<td>
		    		<%= group.phone_number %>
		    	</td>
		    	<td>
		    		<%= group.mail %>
		    	</td>
		    	<td>
		    		<%= link_to "詳細へ", group_path(group.id) %>
		    	</td>
		    	<td>
		    		<%= link_to "編集へ", edit_group_path(group.id) %>
		    	</td>
		    	<td>
		    		<% if group.volunteers.exists? %>
		    			<%= link_to "求人", show_volunteers_path(group.id) %>
		    		<% end %>
		    	</td>
		    </tr>
		</tbody>
	<% end %>
	<%= paginate @groups %>
</table>